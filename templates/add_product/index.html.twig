{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('assets/css/product.css') }}">
    <h2>Liste des produits</h2>
    <div id="center">
        <a href="{{ path('app_add_product_new') }}"><span>></span>Ajouter un produit<span><</span></a>
    </div>
    <div id="container-product">
        {% for produit in produits %}
        <div class="box-product">
            {# <div>{{ produit.id }}</div> #}
            <div>{{ produit.nom }}</div>
            <div>{{ produit.description }}</div>
            <div>{{ produit.image }}</div>
            <div>{{ produit.stock }}</div>
            <a href="{{ path('app_add_product_show', {'id': produit.id}) }}"><img src="{{ asset('assets/images/show.png') }}" alt="show"/></a>
            <a href="{{ path('app_add_product_edit', {'id': produit.id}) }}"><img src="{{ asset('assets/images/edit-button.png') }}" alt="edit"/></a>
        </div>
        {% else %}
        <div>Pas de produit</div>
        {% endfor %}
    </div>
{% endblock %}
